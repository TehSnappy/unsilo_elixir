<div class="row">
  <%= for player <- @players do %>
    <div class="col-md-4 border">
      <div class="card-body">
        <h5 class="card-title"><%= player.name %></h5>
        <p class="card-text"><%= player.player_state.current_state %></p>
        <p class="card-text"><small class="text-muted">
        </small></p>
      </div>
    </div>
  <% end %>
</div>
